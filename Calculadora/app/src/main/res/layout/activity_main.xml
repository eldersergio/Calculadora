<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.elder.calculadora.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:id="@+id/visor_pacial"
        android:text="Texto 1"
        android:textSize="22dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/visor_pacial"
        android:layout_alignParentRight="true"
        android:id="@+id/visor_resultado"
        android:textSize="50dp"
        android:text="Texto 2"/>

    <Button
        android:id="@+id/num7"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/visor_resultado"
        android:layout_alignParentLeft="true"
        android:text="7"
        android:textSize="18dp" />

    <Button
        android:id="@+id/num4"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/num7"
        android:layout_alignParentLeft="true"
        android:text="4"
        android:textSize="18dp" />

    <Button
        android:id="@+id/num1"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/num4"
        android:layout_alignParentLeft="true"
        android:text="1"
        android:textSize="18dp" />

    <Button
        android:id="@+id/ponto"
        android:layout_width="64dp"
        android:layout_height="match_parent"
        android:layout_below="@id/num1"
        android:layout_above="@id/enviar"
        android:layout_alignParentLeft="true"
        android:text="."
        android:textSize="18dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/enviar"
        android:text="Enviar"
        android:textSize="18dp"
        android:layout_toLeftOf="@id/maismenos"
        android:layout_below="@id/igual"
        android:onClick="enviar"/>

    <Button
        android:id="@+id/num8"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/visor_resultado"
        android:layout_toRightOf="@id/num7"
        android:text="8"
        android:textSize="18dp" />

    <Button
        android:id="@+id/num5"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/num7"
        android:layout_toRightOf="@id/num4"
        android:text="5"
        android:textSize="18dp" />

    <Button
        android:id="@+id/num2"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/num4"
        android:layout_toRightOf="@id/num1"
        android:text="2"
        android:textSize="18dp" />

    <Button
        android:id="@+id/num0"
        android:layout_width="64dp"
        android:layout_height="match_parent"
        android:layout_below="@id/num2"
        android:layout_toRightOf="@id/ponto"
        android:layout_above="@id/enviar"
        android:text="0"
        android:textSize="18dp" />

    <Button
        android:id="@+id/num9"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/visor_resultado"
        android:layout_toRightOf="@id/num8"
        android:text="9"
        android:textSize="18dp" />

    <Button
        android:id="@+id/num6"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/num9"
        android:layout_toRightOf="@id/num5"
        android:text="6"
        android:textSize="18dp" />

    <Button
        android:id="@+id/num3"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/num6"
        android:layout_toRightOf="@id/num2"
        android:text="3"
        android:textSize="18dp" />

    <Button
        android:id="@+id/mais"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/visor_resultado"
        android:layout_toRightOf="@id/num9"
        android:height="10dp"
        android:text="+"
        android:textSize="18dp" />

    <Button
        android:id="@+id/menos"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/mais"
        android:layout_toRightOf="@id/num6"
        android:text="-"
        android:textSize="18dp" />

    <Button
        android:id="@+id/vezes"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/menos"
        android:layout_toRightOf="@id/num3"
        android:text="*"
        android:textSize="18dp" />

    <Button
        android:id="@+id/porcentagem"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/visor_resultado"
        android:layout_toRightOf="@id/mais"
        android:text="%"
        android:textSize="18dp" />

    <Button
        android:id="@+id/potencia"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:layout_below="@id/porcentagem"
        android:layout_toRightOf="@id/menos"
        android:text="x^"
        android:textSize="18dp" />

    <Button
        android:id="@+id/fatorial"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:layout_below="@id/potencia"
        android:layout_toRightOf="@id/vezes"
        android:text="x!"
        android:textSize="18dp" />

    <Button
        android:id="@+id/dividir"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/vezes"
        android:layout_toRightOf="@id/num6"
        android:text="รท"
        android:textSize="18dp" />

    <Button
        android:id="@+id/igual"
        android:layout_width="64dp"
        android:layout_height="match_parent"
        android:layout_below="@id/num3"
        android:layout_above="@id/maismenos"
        android:layout_toRightOf="@id/num0"
        android:text="="
        android:textSize="18dp" />

    <Button
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:id="@+id/cosseno"
        android:text="COS"
        android:textSize="18dp"
        android:layout_toRightOf="@id/igual"
        android:layout_below="@id/dividir"/>

    <Button
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:id="@+id/clearall"
        android:text="C"
        android:textSize="18dp"
        android:layout_toRightOf="@id/igual"
        android:layout_below="@id/cosseno"/>

    <Button
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:id="@+id/maismenos"
        android:text="+/-"
        android:textSize="18dp"
        android:layout_toLeftOf="@id/clearall"
        android:layout_below="@id/cosseno"/>

    <Button
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:id="@+id/seno"
        android:text="SIN"
        android:textSize="18dp"
        android:layout_toRightOf="@id/dividir"
        android:layout_below="@id/fatorial"/>

    <Button
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:id="@+id/tangente"
        android:text="TAN"
        android:textSize="18dp"
        android:layout_toRightOf="@id/cosseno"
        android:layout_below="@id/seno"/>

    <Button
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:id="@+id/raiz"
        android:text="v"
        android:textSize="18dp"
        android:layout_toRightOf="@id/clearall"
        android:layout_below="@id/tangente"/>

</RelativeLayout>
